<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_marginTop="50dp">

    <LinearLayout
        android:id="@+id/mapLayout"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:weightSum="100"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100">

            <EditText
                android:id="@+id/locationTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="90"
                android:hint="Title"
                android:textSize="30sp"
                android:textAlignment="center"
                android:textStyle="bold" />

            <Button
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:text="\?"
                android:textSize="30sp"
                android:tooltipText="Long click on the map to set the marker. One click on the marker to delete it."/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:weightSum="100"
            android:layout_weight="90">
            <Space
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="240dp"/>

            <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="90"
                android:layout_marginTop="10dp"
                tools:context="com.chs.app.LocationDetailsActivity" />
        </LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Width"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"/>

            <SeekBar
                android:id="@+id/widthSeekBar"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:theme="@style/SeekBarColor"
                android:layout_marginBottom="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Height"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"/>

            <SeekBar
                android:id="@+id/heightSeekBar"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:theme="@style/SeekBarColor"
                android:layout_marginBottom="10dp" />

        </LinearLayout>

        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/checkBox"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Turn on notifications for this location"
            android:layout_marginLeft="5dp"
            android:theme="@style/CheckBoxColor"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:weightSum="100"
            android:gravity="center">
            <Button
                android:id="@+id/locationMode"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="75"
                android:text="Mode"
                android:gravity="center"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="40sp"
                android:background="@color/modeBackgroundColor" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>